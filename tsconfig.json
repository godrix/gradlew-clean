{
  "compilerOptions": {
    "target": "es2020",                                 
    "module": "commonjs",                              
    "esModuleInterop": true,       
    "strict": false,                                     
    "skipLibCheck": true,
    "declaration": true, 
    "outDir": "./dist",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,  
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}